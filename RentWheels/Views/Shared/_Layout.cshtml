                    <li>@Html.ActionLink("CarBack", "CarRental", "CarBack")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("CarBack", "Login", "Account")</li>
                    }
                </ul>

                @if (!User.Identity.IsAuthenticated)
                  {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="user-profile">
                            <div class="user-info">  
                                <label class="label label-info" style="font-size:15px;"><span class="username glyphicon glyphicon-user">@User.Identity.Name</span></label>                                                             
                            </div>
                        </li>
                        <li>@Html.ActionLink("Logout", "Signout", "Account")</li>
                    </ul>
                }

            </div>
        </div>
    </nav>


    <div class="container body-content" style="margin-top:20px;">
